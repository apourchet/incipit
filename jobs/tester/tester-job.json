{
    "apiVersion": "batch/v1", 
    "kind": "Job", 
    "metadata": {
        "namespace": "{{.NAMESPACE}}", 
        "name": "tester-job"
    },
    "spec": {
        "template": {
            "spec": {
                "restartPolicy": "Never", 
                "containers": [
                    {
                        "image": "{{$.DOCKER_REPO}}/tester:v1", 
                        "name": "tester",
                        "command": ["/bin/bash", "/test.sh"],
                        "env": [
                            {"name": "IN_KUBERNETES", "value": "true"}
                        ]
                    }
                ]
            }, 
            "metadata": {
                "name": "tester-job"
            }
        }
    }
}
