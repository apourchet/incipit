{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "tmp",
        "namespace": "{{.NAMESPACE}}",
        "labels": {
            "name": "tmp"
        }
    },
    "spec": {
        "capacity": {
            "storage": "5Gi"
        },
        "accessModes": ["ReadWriteOnce"],
        "persistentVolumeReclaimPolicy": "Retain",
        "hostPath": {
            "path": "/tmp/{{.NAMESPACE}}"
        }
    }
}
