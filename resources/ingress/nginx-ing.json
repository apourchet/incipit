{
    "apiVersion": "extensions/v1beta1", 
    "kind": "Ingress", 
    "metadata": {
        "namespace": "{{$.NAMESPACE}}", 
        "name": "main-ingress"
    },
    "spec": {
        "tls": [
            {
                "hosts": [
                    "{{.INGRESS_HOSTNAME}}"
                ], 
                "secretName": "server-cert"
            }
        ], 
        "rules": [
            {
                "host": "{{.INGRESS_HOSTNAME}}", 
                "http": {
                    "paths": [
                        {
                            "path": "/api/v1/auth", 
                            "backend": {
                                "serviceName": "auth", 
                                "servicePort": 8080
                            }
                        }
                    ]
                }
            }
        ]
    }
}
