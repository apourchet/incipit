{
    "apiVersion": "extensions/v1beta1", 
    "kind": "Deployment", 
    "metadata": {
        "namespace": "{{.NAMESPACE}}", 
        "name": "simplerpc"
    },
    "spec": {
        "replicas": {{$.SIMPLERPC_REPLICAS}},
        "template": {
            "spec": {
                "containers": [
                    {
                        "image": "{{$.DOCKER_REPO}}/simplerpc:v1", 
                        "name": "simplerpc", 
                        "ports": [
                            { "containerPort": 8080 }
                        ]
                    }
                ]
            }, 
            "metadata": {
                "labels": {
                    "simplerpc": "true"
                }
            }
        }, 
        "selector": {
            "matchLabels": {
                "simplerpc": "true"
            }
        }
    }
}
