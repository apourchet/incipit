{
    "apiVersion": "extensions/v1beta1", 
    "kind": "Deployment", 
    "metadata": {
        "namespace": "{{.NAMESPACE}}", 
        "name": "hello"
    },
    "spec": {
        "replicas": {{.HELLO_REPLICAS}},
        "template": {
            "spec": {
                "containers": [
                    {
                        "image": "{{$.DOCKER_REPO}}/hellogo:v1", 
                        "name": "hellogo", 
                        "ports": [
                            {
                                "containerPort": 8080
                            }
                        ]
                    }, 
                    {
                        "image": "{{$.DOCKER_REPO}}/hellonode:v1", 
                        "name": "hellonode", 
                        "ports": [
                            {
                                "containerPort": 8081
                            }
                        ]
                    }
                ]
            }, 
            "metadata": {
                "labels": {
                    "hellogo": "true",
                    "hellonode": "true"
                }
            }
        }, 
        "selector": {
            "matchLabels": {
                "hellogo": "true",
                "hellonode": "true"
            }
        }
    }
}
