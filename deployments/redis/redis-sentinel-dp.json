{
	"apiVersion": "extensions/v1beta1",
	"kind": "Deployment",
	"metadata": {
        "namespace": "{{.NAMESPACE}}",
		"name": "redis-sentinel"
	},
	"spec": {
		"replicas": 1,
		"selector": {
            "matchLabels": {
                "redis-sentinel": "true"
            }
		},
		"template": {
			"metadata": {
				"labels": {
					"name": "redis-sentinel",
					"redis-sentinel": "true",
					"role": "sentinel"
				}
			},
			"spec": {
				"containers": [
					{
						"name": "sentinel",
						"image": "gcr.io/google_containers/redis:v1",
						"env": [
							{
								"name": "SENTINEL",
								"value": "true"
							}
						],
						"ports": [
							{
								"containerPort": 26379
							}
						]
					}
				]
			}
		}
	}
}
